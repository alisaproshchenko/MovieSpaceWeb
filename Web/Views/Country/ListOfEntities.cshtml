@using System.Web.Mvc.Html
@model Web.ViewModels.CountryViewModel

<div class="background-cover">
    <div>@Html.ActionLink("Add", "Add", "Country",null,null)</div>

    @foreach (var entity in Model.Countries)
    {
        <div style="border: 1px solid red; width: 100px; height: 100px; display: inline-grid;">
            <div>@entity.Name</div>
            <div>@Html.ActionLink("Delete", "Delete", "Country",new {entity.Id, entity.Name},null)</div>
            <div>@Html.ActionLink("Edit", "Edit", "Country",new {entity.Id, entity.Name},null)</div>
        </div>
    }
</div>


@Html.Partial("Partials/PagePartial/CountryPagePartial")