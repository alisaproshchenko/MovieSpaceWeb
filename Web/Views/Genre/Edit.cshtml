@model MoviesService.Dto.GenresDto

<h2>Edit genre</h2>

@using (Html.BeginForm("Update", "Genre", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Name, "Name")
            <br />
            @Html.EditorFor(m => m.Name)
        </p>
        <p><input type="submit" value="Send" /></p>
    </fieldset>
}