@using WebGrease.Css.Ast.Animation
<html class="animation-html-body">

    <head>
        @Html.Partial("Partials/MetaPartial")
        @Html.Partial("Partials/CssPartial")
    </head>


    <body class="animation-html-body background-animation-body">

        <div class="navbar navbar-inverse navbar-fixed-top" style>
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Movie space", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
                </div>

                <div class="navbar-collapse collapse" style="background-color: black;">
                    <div>
                        <ul class="nav navbar-nav">
                            @if (User.IsInRole("Administrator"))
                            {
                                <li>@Html.ActionLink("Admin panel", "AdminPanel", "Admin")</li>
                            }
                        </ul>
                    </div>
                    
                    <div class="authorization-login-logout">
                        <ul class="nav navbar-nav">
                            <li class="search">
                                @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                                {
                                    <div>     
                                        <input class="search-input" name="searchData" type="text" placeholder="Name" />
                                        <button class="seach-button" name="action" value="search"><i class="fa fa-search" aria-hidden="true"></i></button>
                                    </div>
                                }
                            </li>
                            
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="user-name-position">Hello, @User.Identity.Name</li>
                                <li>@Html.ActionLink("Logout", "Logout", "Account")</li> }
                            else
                            {
                                <li>@Html.ActionLink("Login", "Login", "Account")</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr/>
            <footer>
                <p>&copy; @DateTime.Now.Year - Movie space</p>
            </footer>
        </div>

    @Html.Partial("Partials/ScriptsPartial")
    @RenderSection("scripts", required: false)
    </body>

</html>

<style>
    .animation-html-body {
        width: 100%;
        height: 100%;
    }

    .background-animation-body {
        background: linear-gradient(-45deg, #000080, #000000, #2f4f4f, tomato);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
    }

    @@keyframes gradient{
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }
</style>

