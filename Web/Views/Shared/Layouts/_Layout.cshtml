<html>
<head>
    @Html.Partial("Partials/MetaPartial")
    <title>@ViewBag.Title - Movie Space</title>
    @Html.Partial("Partials/CssPartial")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Movie space", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li style="top:13px">
                        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                        {
                            <input name="searchData" type="text" placeholder="print name for search"/>
                            <button name="action" value="search">Search</button>
                        }</li>
                        @if (User.Identity.IsAuthenticated)
                        {
<li>Hello, @User.Identity.Name</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Html.Partial("Partials/ScriptsPartial")
    @RenderSection("scripts", required: false)
</body>
</html>