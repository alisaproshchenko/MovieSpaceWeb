@model Web.ViewModels.GenericEntitiesViewModel<MoviesService.Dto.MediaDto>

<div class="background-cover">
    @using (Html.BeginForm())
    {
        <div>
            @Html.LabelFor(model => model.Entity.Name, htmlAttributes: null)
            @Html.EditorFor(model => model.Entity.Name, null)
            @Html.ValidationMessageFor(m => m.Entity.Name, null, new { @class = "validation-field-error" })
        </div>

        <div>
            @Html.LabelFor(model => model.Entity.Year, htmlAttributes: null)
            @Html.EditorFor(model => model.Entity.Year, null)
            @Html.ValidationMessageFor(m => m.Entity.Year, null, new { @class = "validation-field-error" })
        </div>
        <div>
            @Html.LabelFor(model => model.Entity.Plot, htmlAttributes: null)
            @Html.EditorFor(model => model.Entity.Plot, null)
        </div>
        <div>
            @Html.LabelFor(model => model.Entity.Plot, htmlAttributes: null)
            @Html.EditorFor(model => model.Entity.Plot, null)
            @Html.ValidationMessageFor(m => m.Entity.Plot)
        </div>
        <div>
            @Html.LabelFor(model => model.Entity.LinkEmbed, htmlAttributes: null)
            @Html.EditorFor(model => model.Entity.LinkEmbed, null)
        </div>
        <div>
            @Html.LabelFor(model => model.Entity.Poster, htmlAttributes: null)
            @Html.EditorFor(model => model.Entity.Poster, null)
        </div>
        <div>
            <h3>Genres</h3>
            @foreach (var c in ViewBag.Genres)
            {
                <div class="filterDiv" style="display: inline-grid;">
                    @c.Name
                    <input style="width: 130px;" type="checkbox" name="selectedGenres" value="@c.Id"/>
                </div>
            }
        </div>
        <div>
            <h3>Countries</h3>
            @foreach (var c in ViewBag.Country)
            {
                <div class="filterDiv" style="display: inline-grid;">
                    @c.Name
                    <input style="width: 130px;" type="checkbox" name="selectedCountries" value="@c.Id"/>
                </div>
            }
        </div>
        
        <div>
            <h3>  @Html.LabelFor(model => model.Entity.Types, htmlAttributes: null)</h3>
            @foreach (var c in ViewBag.Types)
            {
                <div class="filterDiv" style="display: inline-grid;">
                    @c.Name
                    <input type="radio" name="selectedType" value="@c.Id" />
                </div>
            }
            @Html.ValidationMessageFor(m => m.Entity.Types)
        </div>
        <input type="submit" value="Add"/>}
</div>




