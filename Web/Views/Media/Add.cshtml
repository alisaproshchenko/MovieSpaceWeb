@model Web.ViewModels.GenericEntitiesViewModel<MoviesService.Dto.MediaDto>

@using (Html.BeginForm())
{
    <div class="authorization-position">
        <table>
            <tr>
                <th style="width:200px"> @Html.LabelFor(model => model.Entity.Name, htmlAttributes: new { @class = "authorization-label" })</th>
                <th> @Html.EditorFor(model => model.Entity.Name, new { htmlAttributes = new { @class = "authorization-login" } })</th>
            </tr>
            <tr>
                <th style="width:200px"> @Html.LabelFor(model => model.Entity.Year, htmlAttributes: new { @class = "authorization-label" })</th>
                <th> @Html.EditorFor(model => model.Entity.Year, new { htmlAttributes = new { @class = "authorization-login" } })</th>
            </tr>
            <tr>
                <th style="width:200px"> @Html.LabelFor(model => model.Entity.Plot, htmlAttributes: new { @class = "authorization-label" })</th>
                <th> @Html.EditorFor(model => model.Entity.Plot, new { htmlAttributes = new { @class = "authorization-login" } })</th>
            </tr>
            <tr>
                <th>Genres</th>
                <th>
                    @foreach (var c in ViewBag.Genres)
                    {
                        <input type="checkbox" name="selectedGenres" value="@c.Id" />@c.Name
                        <br />
                    }
                </th>
            </tr>
            <tr>
                <th>Countries</th>
                <th>
                    @foreach (var c in ViewBag.Country)
                    {
                        <input type="checkbox" name="selectedCountries" value="@c.Id" />@c.Name
                        <br />
                    }
                </th>
            </tr>
            <tr>
                <th>Types</th>
                <th>
                    @foreach (var c in ViewBag.Types)
                    {
                        <input type="radio" name="selectedType" value="@c.Id" />@c.Name
                        <br />
                    }
                </th>
            </tr>
        </table>

        <input type="submit" value="Add" class="authorization-button"/>
    </div>
}